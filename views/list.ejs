<%- include('header') -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItem.forEach((item) => {%>
  <div class="item">
    <input type="checkbox" />
    <p><%= item %></p>
  </div>
  <% }); %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="Add Item" required />
    <button type="submit" name="listTitle" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include('footer') -%>
